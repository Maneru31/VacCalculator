<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CalculatorFragment">


   <TextView
       android:layout_marginTop="80dp"
       android:id="@+id/startdate"
       android:layout_width="200dp"
       android:layout_height="50dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:text="Выбрать начальную дату"
       android:background="@color/cyan"
       android:gravity="center"
       android:textSize="15dp"
       android:textColor="@color/white"
       />
    <TextView
        android:id="@+id/lastDate"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startdate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        android:background="@color/cyan"
        android:textColor="@color/white"
        android:text="Выбрать конечную дату"
        android:gravity="center"
        android:textSize="15dp"
        />

    <EditText
        android:id="@+id/editHow"
        android:layout_width="256dp"
        android:layout_height="50dp"
        android:hint="Кол-во дней отпуска в год"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lastDate"
        app:layout_constraintVertical_bias="0.222" />

    <Button
        android:id="@+id/btnResult"
        android:layout_width="243dp"
        android:layout_height="52dp"
        android:background="@drawable/button_bg"
        android:text="Расчитать"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editHow"
        app:layout_constraintVertical_bias="0.328" />

</androidx.constraintlayout.widget.ConstraintLayout>